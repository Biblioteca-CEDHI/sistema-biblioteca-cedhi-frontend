{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/assets/(.*)",
            "dest": "/assets/$1",
            "headers": {
                "cache-control": "public, max-age=0, must-revalidate"
            }
        },
        {
            "src": "/(.*)",
            "dest": "/index.html",
            "headers": {
                "cache-control": "no-store"
            }
        }
    ]
}